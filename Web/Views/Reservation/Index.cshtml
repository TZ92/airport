@model IEnumerable<Domain.Entities.Reservation>

@{
    ViewBag.Title = "Index";
}

<h3 class="header smaller lighter blue"><i class="fa fa-list-alt"></i> Reservation List</h3>



<a class="blue" href="@Url.Action("Create", "Reservation")">
    <i class="fa fa-plus"></i> Create New
</a>
<table id="dynamic-table" class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateReservation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelClass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlightId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateReservation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TravelClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FlightId)
        </td>
        <td>
            <a class="blue" href="@Url.Action("Details", "Reservation", new {id= item.ReservationId})">
                <i class="ace-icon fa fa-search-plus bigger-130"></i>
            </a>

            <a class="green" href="@Url.Action("Edit", "Reservation", new {id= item.ReservationId })">
                <i class="ace-icon fa fa-pencil bigger-130"></i>
            </a>

            <a class="red" href="@Url.Action("Delete", "Reservation", new {id= item.ReservationId })">
                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                <a class="red" href="@Url.Action("PDF", "Reservation", new {id= item.ReservationId })">
                    <i class="ace-icon fa fa-file-pdf-o bigger-130"></i>

                   

</td>
    </tr>
}

</table>
